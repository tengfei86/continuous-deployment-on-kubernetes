<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="60" name="dspdm">
    <Properties>
        <Property name="pathToConfigRootDir">C:/DSPDM</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{[MMM-dd HH:mm:ss:SSS zzz]} [%t] %-5level - %msg%n"/>
        </Console>
        <RollingFile name="RollingFile" bufferedIO="true" immediateFlush="false"
                     fileName="${pathToConfigRootDir}/logs/dspdm.log"
                     filePattern="${pathToConfigRootDir}/logs/$${date:yyyy-MM}/dspdm-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{[MMM-dd HH:mm:ss:SSS zzz]} [%t] %-5level - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="10">
                <Delete basePath="${pathToConfigRootDir}/logs" maxDepth="2">
                    <IfFileName glob="*/*.log.gz"/>
                    <IfLastModified age="60d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="com.lgc.dspdm" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
    </Loggers>
</Configuration>